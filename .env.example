PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:3000
DATABASE_DRIVER=mysql
DATABASE_DSN=mysql://user:password@localhost:3306/auralis?sslmode=disable
JWT_SECRET=protective
# Require admin approval for newly created agents (true/false)
AGENT_REVIEW_ENABLED=true

LLM_API_KEY=your-api-key
LLM_BASE_URL=https://openai.qiniu.com/v1
LLM_MODEL_ID=gpt-oss-120b

# Conversation Memory
LLM_MEMORY_RECENT_LIMIT=12
LLM_MEMORY_SUMMARY_THRESHOLD=6
LLM_MEMORY_SUMMARY_MAX_CHARS=800
LLM_MEMORY_SUMMARY_WINDOW=40
# Optional custom prompt for summarization (leave empty to use default)
LLM_MEMORY_SUMMARY_PROMPT=



MINIO_ENDPOINT=localhost:9000          # MinIO API 地址（host:port）
MINIO_ACCESS_KEY=your-access-key       # MinIO Access Key
MINIO_SECRET_KEY=your-secret-key       # MinIO Secret Key
MINIO_BUCKET=auralis-agents            # 用于存储头像的 bucket 名称，可自定义
MINIO_USE_SSL=false                    # 如果是 https 改为 true
MINIO_PUBLIC_URL=http://localhost:9001 # 访问上传头像的标准 URL，没有的话用 endpoint 替代

LIVE2D_STORAGE_DIR=./data/live2d         # Live2D 模型归档的本地存储目录

# Text-to-Speech (Qiniu OpenAI)
TTS_QINIU_API_BASE_URL=https://openai.qiniu.com/v1
TTS_QINIU_API_BACKUP_URL=https://api.qnaigc.com/v1
TTS_QINIU_API_KEY=
TTS_QINIU_MODEL_ID=tts

# Text-to-Speech (Aliyun CosyVoice)
COSYVOICE_API_KEY=
COSYVOICE_MODEL=cosyvoice-v3
COSYVOICE_DEFAULT_VOICE=longhuhu_v3
COSYVOICE_SAMPLE_RATE=22050
COSYVOICE_FORMAT=mp3
COSYVOICE_WS_URL=wss://dashscope.aliyuncs.com/api-ws/v1/inference
COSYVOICE_WORKSPACE=
COSYVOICE_DATA_INSPECTION=enable
COSYVOICE_VOLUME=50

